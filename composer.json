{
    "name": "chiiya/code-style-php",
    "description": "Linting configurations for PHP projects",
    "keywords": [
        "code-style",
        "linting",
        "esc",
        "php-cs-fixer",
        "rector"
    ],
    "homepage": "https://github.com/chiiya/code-style-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Elisha Witte",
            "email": "github@chiiya.moe",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "friendsofphp/php-cs-fixer": "^3.68",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.22",
        "rector/rector": "^2.0",
        "slevomat/coding-standard": "^8.15",
        "symplify/coding-standard": "^12.2",
        "symplify/easy-coding-standard": "^12.5"
    },
    "require-dev": {
        "phpro/grumphp": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "Chiiya\\CodeStyle\\": "src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
